$(function(){
  $(window).scroll(function() {
      if ($(this).scrollTop() > 100) { 
          $('a#back-to-top').show();
      }else{
        $('a#back-to-top').hide();
      }
  });
    // scroll body to 0px on click
    $('body').on('click', '#back-to-top', function() {
      $('body,html').animate({
          scrollTop: 0
      }, 800);
      return false;
  });

});